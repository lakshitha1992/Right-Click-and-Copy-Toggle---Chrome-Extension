{
  "manifest_version": 3,
  "name": "Right Click and Copy Toggle",
  "version": "1.0",
  "description": "Enable or disable right-click and text copying on protected pages.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
